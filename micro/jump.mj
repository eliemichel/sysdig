const addrInstrSize = 16
const wordSize = 8

(* #require(utils) *)

main(isJumping, jumpSize:[wordSize]) = (addr:[addrInstrSize])
where
	curAddr = reg_n<addrInstrSize>(addr);
	a = incr_n<addrInstrSize>(curAddr);
	vide = empty<addrInstrSize-wordSize>();
	b = add_n<addrInstrSize>(
		curAddr,
		vide . jumpSize
	);
	addr = mux_n<addrInstrSize>(b, a, isJumping)
end where

